<h1>All books</h1>

<% @records.each do |record| %>
  <p><%= "#{record.book.title} by #{record.author.full_name}" %></p>
  <p><%= record.book.price %></p>
  <p><%= record.book.published %></p>
  <p><%= record.book.quantity %></p>
  <%= link_to "Edit Book", edit_book_path(record.book) if policy(record.book).edit? %>
  <%= link_to "Edit Author", edit_author_path(record.author) if policy(record.author).edit? %>
  <hr>
<% end %>
