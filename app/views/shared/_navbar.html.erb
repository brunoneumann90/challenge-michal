<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://www.clipartmax.com/png/middle/32-323377_magic-book-livro-magico-desenho.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link text-white" %>
        </li>
          <% if current_user %>
          <li class="nav-item">
            <%= link_to "Dashboard", dashboard_path, class: "nav-link text-white" if current_user.admin? %>
          </li>
          <li class="nav-item">
            <%= link_to "Shopping Cart", shopping_cart_path, class: "nav-link text-white" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "Bruno.jpeg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link text-white" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
